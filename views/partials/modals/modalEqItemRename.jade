.modal-header
  h3.modal-title Редактировать: {{unchanged}}
.modal-body
  div.error(ng-if='error')
    alert(type='warning', close='closeAlert()')
      strong Ошибка: 
      | {{error}}
  input.form-control(type='text', placeholder='{{placeholder}}', ng-model='iface[editable]')
.modal-footer
  button.btn.btn-default(ng-click='cancel()') Отмена
  button.btn.btn-primary(ng-click='confirm()') Сохранить
